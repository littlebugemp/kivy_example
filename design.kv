<LoginScreen>:
    GridLayout:
        cols:1
        GridLayout:
            cols:1
            padding: 15, 15
            spacing: 20, 20
            Label:
                text: "User Login"
                font_size: '20sp'
            TextInput:
                hint_text:"Username"
                id:username
            TextInput:
                hint_text:"Password"
                id:password
                password:'true'
            RelativeLayout:
                Button:
                    text:"Login"
                    size_hint:0.3, 0.7
                    pos_hint:{'center_x':0.5,'center_y':0.6}
                    on_press:root.login(root.ids.username.text, root.ids.password.text)
            Label:
                text:''
                id:loginmessage
        GridLayout:
            cols:2
            padding: 15
            size_hint:0.2, 0.2
            padding:10, 10
            spacing:10, 0
            Button:
                text:"Forgot Password?"
                on_press:root.forgot_password()
                background_color:1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1

            Button:
                text:"Sign Up"
                on_press:root.sign_up()
                background_color:1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1

<SignUpScreen>:
    GridLayout:
        cols:1
        padding: 15, 15
        spacing: 20, 20
        Label:
            text:"Sign Up for a space journey!"
        TextInput:
            hint_text:"Username"
            id:username
        TextInput:
            hint_text:"Password"
            id:password
            password:'true'
        RelativeLayout:
            Button:
                text:"Submit"
                on_press:root.add_user(root.ids.username.text,root.ids.password.text)
                size_hint:0.3, 0.5
                pos_hint:{'center_x':0.5,'center_y':0.6}
        Label:
            id:signupmsg
            text:""


<SignUpScreenSuccess>:
    GridLayout:
        cols:1
        padding: 15, 15
        spacing: 20, 20
        Label:
            text:"Sign Up Successfully"
        RelativeLayout:
            Button:
                text:"Login Page"
                size_hint:0.3, 0.2
                on_press:root.move_to_login_page()
                pos_hint:{'center_x':0.5,'center_y':0.6}

<LoginScreenSuccess>:
    GridLayout:
        cols:1
        padding: 30, 30
        spacing: 30, 30
        RelativeLayout:
            Button:
                on_press: root.logout()
                text:"Logout"
                spacing: 10, 10
                size_hint:0.2, 0.4
                pos_hint:{'center_x':0.9,'center_y':0.8}
        Label:
            text:"How do you feel?"
        TextInput:
            hint_text:"Things to try: happy, sad, unloved...."
            id:usrInput
        Button:
            text:"Enlighten Me"
            on_press:root.enlighten_me(root.ids.usrInput.text)
        ScrollView:
            Label:
                text:""
                text_size:self.width, None
                size_hint_y:None
                height:self.texture_size[1]
                id:quote_text

<ForgotPassword>:
    GridLayout:
        cols:1
        Label:
            text:"Forgot password hahahaha :)"


<RootWidget>:
    LoginScreen:
        name:"login_screen"
    SignUpScreen:
        name:"signup_screen"
    SignUpScreenSuccess:
        name:"sign_up_success"
    LoginScreenSuccess:
        name:"login_success"
    ForgotPassword:
        name:"forgot_pass"