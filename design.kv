<LoginScreen>:
    GridLayout:
        cols:1
        GridLayout:
            cols:1
            Label:
                text: "User Login"
            TextInput:
                hint_text:"Username"
            TextInput:
                hint_text:"Password"
            Button:
                text:"Login"
        GridLayout:
            cols:2
            Button:
                text:"Forgot Password?"
            Button:
                text:"Sign Up"
                on_press:root.sign_up()

<SignUpScreen>:
    GridLayout:
        cols:1
        Label:
            text:"Sign Up for a space journey!"
        TextInput:
            hint_text:"Username"
            id:username
        TextInput:
            hint_text:"Password"
            id:password
        Button:
            text:"Submit"
            on_press:root.add_user(root.ids.username.text,root.ids.password.text)

<RootWidget>:
    LoginScreen:
        name:"login_screen"
    SignUpScreen:
        name:"signup_screen"